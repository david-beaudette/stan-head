// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    // Build tasks
    {
      "label": "build",
      "detail": "Build workspace (default)",
      "type": "shell",
      "command": "catkin_make install --source stan-head/src",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc",
      "options": {
        "cwd": "${workspaceFolder}/.."
      }
    },
    // Clean
    {
      "label": "clean",
      "detail": "Run the clean target",
      "type": "shell",
      "command": "catkin_make clean --source stan-head/src",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/.."
      }
    },
    // Purge
    {
      "label": "purge",
      "detail": "Purge workspace by deleting all generated files.",
      "type": "shell",
      "command": "rm -fr build devel install log; py3clean .",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/.."
      }
    },
    // Launch tasks
    {
      "label": "Launch UI",
      "detail": "Launches the ROS nodes to operate Stan from a desktop computer",
      "type": "shell",
      "command": "source install/setup.sh; roslaunch stan_common stan_head_desktop.launch",
      "group": "none",
      "problemMatcher": "$gcc",
      "options": {
        "cwd": "${workspaceFolder}/.."
      }
    },
    {
      "label": "Launch Head",
      "detail": "Launches the ROS nodes that run in Stan's head",
      "type": "shell",
      "command": "source install/setup.sh; roslaunch stan_common stan_head_rpi.launch",
      "group": "none",
      "problemMatcher": "$gcc",
      "options": {
        "cwd": "${workspaceFolder}/.."
      }
    },
  ],
  "inputs": [
    {
      "id": "package",
      "type": "promptString",
      "description": "Package name"
    }
  ]
}